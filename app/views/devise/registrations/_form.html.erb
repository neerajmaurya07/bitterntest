

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :id=>"register-form", :style=>"display: none;") do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :id=>"email", :class=>"form-control", :placeholder=>"Username"  %>
  </div>
  <div class="form-group">
    <input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Email Address" value="">
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :id=>"password", :class=>"form-control", :placeholder=>"Password" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control", :placeholder=>"Confirm Password", :id=>"confirm-password" %>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <%= f.submit "Sign up", :class=>"form-control btn btn-register", :id=>"register-submit" %>
      </div>
    </div>
  </div>
<% end %>
