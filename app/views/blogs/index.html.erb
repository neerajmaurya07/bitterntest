<p id="notice"><%= notice %></p>

<h1>Blogs</h1>
<%= form_tag blogs_path, method: 'get', remote: true do %>
  <p > Search Event Date
  <%= date_field_tag :search_date, params[:search_date]%>
  <%= submit_tag "Search", :name => nil %>
  </p>
<% end -%>
<div id="after_search"></div>
<div id="befor_search">

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Description</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= image_tag(blog.image) %></td>
        <td><%= blog.description %></td>
        <td><%= blog.category %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
</div>