<% @blogs.each do |blog| %>
  <h1><%= blog.title %></h1>
<!-- Author -->
  <p class="lead">
  <!--  by <a href="#">Start Bootstrap</a> -->
  </p>
  <hr>
  <p><span class="glyphicon glyphicon-time"></span> Posted on<%= blog.created_at %></p>
  <hr>
  <%= image_tag (blog.image), :class=>"img-responsive" %>
  <hr>
  <p class="lead"><%= blog.description%></p>
  <hr>
  <div class="well">
    <h4>Comment:</h4>
    <%= form_for([blog, blog.comments.build]) do |f| %>
      <div class="form-group">
        <%= f.hidden_field :user_id, value:current_user.try(:id) %>
        <%= current_user.try(:email) %>
        </br>
        <%= f.text_area :body, :class=>"form-control" %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        Comments
        <% blog.comments.each do |comment| %>
        <small><%= comment.user.try(:email) %></small><br>
        <small><%= comment.created_at %></small>
        </br>
        <p>
          <%= comment.body %>
        </p>
        <% end %>
      </h4>
    </div>
  </div>
<%end%>
